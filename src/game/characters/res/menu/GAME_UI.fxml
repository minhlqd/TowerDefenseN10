<?scenebuilder-stylesheet menustyle.css?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="game.characters.GameController"
          xmlns:fx="http://javafx.com/fxml" alignment="BOTTOM_RIGHT" hgap="10" vgap="10">
    <padding><Insets top="100" right="50" bottom="50" left="25"/></padding>

    <Button fx:id ="buyTowerButtonNormal"
            onAction = "#buyTowerNormal"
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"
            GridPane.rowSpan="4"
            prefHeight="64"
            prefWidth="64"
    />

    <Button fx:id ="buyTowerButtonSniper"
            onAction = "#buyTowerSniper"
            GridPane.rowIndex="0"
            GridPane.columnIndex="1"
            GridPane.rowSpan="4"
            prefHeight="64"
            prefWidth="64"
    />

    <Button fx:id ="buyTowerButtonMachine"
            onAction = "#buyTowerMachine"
            GridPane.rowIndex="0"
            GridPane.columnIndex="2"
            GridPane.rowSpan="4"
            prefHeight="64"
            prefWidth="64"
    />


    <Button fx:id = "exit"
            onAction = "#exit"
            GridPane.rowIndex="0"
            GridPane.columnIndex="3"
            GridPane.rowSpan="4"
            prefHeight="64"
            prefWidth="64"
    />

    <Label fx:id = "resourceLabel"
           text = "Gold: "
           GridPane.rowIndex="0"
           GridPane.columnIndex="6"
    />
    <Label fx:id = "levelLabel"
           text = "Wave: "
           GridPane.rowIndex="1"
           GridPane.columnIndex="6"
    />
    <Label fx:id = "livesLabel"
           text = "Lives: "
           GridPane.rowIndex="3"
           GridPane.columnIndex="6"
    />
    <Label fx:id = "scoreLabel"
           text = "Score: "
           GridPane.rowIndex="2"
           GridPane.columnIndex="6"
    />
    <Label fx:id = "Resources"
           GridPane.rowIndex="0"
           GridPane.columnIndex="7"
    />
    <Label fx:id = "Level"
           GridPane.rowIndex="1"
           GridPane.columnIndex="7"
    />
    <Label fx:id = "Score"
           GridPane.rowIndex="2"
           GridPane.columnIndex="7"
    />
    <Label fx:id = "Lives"
           GridPane.rowIndex="3"
           GridPane.columnIndex="7"
    />
    <Label fx:id = "timeLabel"
           GridPane.rowIndex="0"
           GridPane.columnIndex="8"
           GridPane.columnSpan="2"
           GridPane.rowSpan="2"
    />
</GridPane>